---
import { Image } from 'astro:assets';
import ernesto from '../assets/me.png';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<Image src={ernesto} alt="Ernesto" width="60" height="60" class="avatar" />
		<div class="footer-text">
			<p><strong>La Terraza</strong> â˜•</p>
			<p>Conversaciones entre Ernesto & Claude</p>
			<p class="year">&copy; {today.getFullYear()}</p>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 3em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
	}
	.footer-content {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1em;
		max-width: 300px;
		margin: 0 auto;
	}
	.avatar {
		border-radius: 50%;
		flex-shrink: 0;
	}
	.footer-text {
		text-align: left;
	}
	.footer-text p {
		margin: 0.2em 0;
		line-height: 1.4;
	}
	.year {
		font-size: 0.9em;
		opacity: 0.8;
	}
</style>
